@{
    ViewData["Title"] = "Max";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>max</h1>

<div class="row">
    <div class="col-md-4">
        @Html.TextArea("entrada", new { style = "width: 300px; height: 300px", @class = "form-control" })
    </div>

    <div class="col-md-4">
        <a id="btn" class="btn btn-danger"><i class="bi bi-pencil-square" o></i>Proceso</a>
    </div>

    <div class="col-md-4">
        @Html.TextArea("salida", new { style = "width: 300px; height: 300px", @class = "form-control" })
    </div>
</div>


@section Scripts
    {

    <script type="text/javascript">

        $(document).ready(function(){
            $("#btn").click(function () {
                const regex = /^[\s*-?0-9]+$/;
                var url = "@Url.Action("max", "Matriz")";
                var ent = $("#entrada").val();
                var data = {matriz: ent};
                if (regex.test(ent)) {
                    $.post(url, data).done(function (data) {
                        $("#salida").val(data);
                    }).fail(function () {
                        console.log("Error");
                    });
                } else {
                    $("#salida").val("Error de Front: Los valores ingresados no son num√©ricos.");
                }
            });
        });
    </script>
}